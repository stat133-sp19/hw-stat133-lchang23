## ----setup, include=FALSE------------------------------------------------
knitr::opts_chunk$set(collapse = T, comment = "#>")
library(binomial)

## ------------------------------------------------------------------------
# 5 trials, 2 successes
bin_choose(5, 2)

## ------------------------------------------------------------------------
# 5 trials, 2 successes, p = 0.5
bin_probability(2,5,0.5)

## ------------------------------------------------------------------------
# 5 trials, p = 0.5
dis1 <- bin_distribution(5,0.5)
dis1

